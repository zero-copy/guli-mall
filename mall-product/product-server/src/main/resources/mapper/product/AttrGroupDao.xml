<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.mall.mapper.AttrGroupMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.study.mall.entity.AttrGroupEntity" id="attrGroupMap">
        <result property="attrGroupId" column="attr_group_id"/>
        <result property="attrGroupName" column="attr_group_name"/>
        <result property="sort" column="sort"/>
        <result property="descript" column="descript"/>
        <result property="icon" column="icon"/>
        <result property="catelogId" column="catelog_id"/>
    </resultMap>
    
    <resultMap id="spuItemAttrGroupVo" type="com.study.mall.vo.SpuItemAttrGroupVo">
        <result property="groupName" column="attr_group_name"/>
        <collection property="attrs" ofType="com.study.mall.vo.SpuBaseAttrVo">
            <result property="attrName" column="attr_name"/>
            <result property="attrValue" column="attr_value"/>
        </collection>
    </resultMap>

    <select id="getWithAttrBySpuId" resultMap="spuItemAttrGroupVo">
        select ag.attr_group_name, ag.attr_group_id, aar.attr_id, attr.attr_name, pav.attr_value
            from `mall-pms`.pms_attr_group ag
            left join `mall-pms`.pms_attr_attrgroup_relation aar on aar.attr_group_id = ag.attr_group_id
            left join `mall-pms`.pms_attr attr on attr.attr_id = aar.attr_id
            left join `mall-pms`.pms_product_attr_value pav on pav.attr_id = attr.attr_id
        where ag.catelog_id = #{catalogId} and pav.spu_id = #{spuId}
    </select>
</mapper>